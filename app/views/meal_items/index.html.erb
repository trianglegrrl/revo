<p id="notice"><%= notice %></p>

<h1>Meal Items</h1>

<table>
  <thead>
    <tr>
      <th>Food</th>
      <th>User</th>
      <th>Servings</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meal_items.each do |meal_item| %>
      <tr>
        <td><%= meal_item.food %></td>
        <td><%= meal_item.user %></td>
        <td><%= meal_item.servings %></td>
        <td><%= link_to 'Show', meal_item %></td>
        <td><%= link_to 'Edit', edit_meal_item_path(meal_item) %></td>
        <td><%= link_to 'Destroy', meal_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

