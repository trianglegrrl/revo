<% if show_top_separator %><hr /><% end %>
<% if !title.blank? %> <h3><%= title %></h3><% end %>

<% if default_user_action_steps.count > 0 %>

  <table class="table <%= table_class %>">
    <thead>
      <tr>
        <th>Cards</th>
        <th class="d-flex mr-4">Starting at</th>
				<th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% default_user_action_steps.each do |d| %>
        <tr>
          <td>
            <ul class="list-group">
            <% d.action_step_ids.each do |id| %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <%= ActionStep.find(id).name %>
              </li>
            <% end %>
            </ul>
          </td>
          <td>
            <span class="badge badge-primary badge-pill"><%= d.starting_at.strftime(date_format) %></span>
          </td>
					<td>
						<%= link_to(user_default_user_action_step_path(d.user, d), method: :delete, data: { confirm: "Are you sure you want to delete this?" }) do %>
							<i class="fa fa-ban"></i>
						<% end %>
					</td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h4>None</h4>
<% end %>
<% if show_bottom_separator %><hr /><% end %>
